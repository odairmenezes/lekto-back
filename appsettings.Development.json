{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/CadPlusDb_Dev.db"
  },
  "JwtSettings": {
    "SecretKey": "CadPlus_Super_Secret_Key_Minimum_256_Bits_For_Development_Only_Dev_Environment_Super_Safe",
    "Issuer": "CadPlusERP-Dev",
    "Audience": "CadPlusFrontend-Dev",
    "ExpirationHours": 24
  },
  "ApiSettings": {
    "Port": 7001,
    "Url": "http://127.0.0.1:7001"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:4200",
      "http://localhost:4200",
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://127.0.0.1:7001"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "CadPlus": "Debug",
      "Serilog": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cadplus-dev-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3
        }
      }
    ]
  },
  "DetailedErrors": "true",
  "Environment": "Development"
}

{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/CadPlusDb_Dev.db",
    "TestConnection": "Data Source=:memory:"
  },
  "JwtSettings": {
    "SecretKey": "CadPlus_Super_Secret_Key_Minimum_256_Bits_For_Development_Only",
    "Issuer": "CadPlusERP",
    "Audience": "CadPlusFrontend",
    "ExpirationHours": 24
  },
  "ApiSettings": {
    "Port": 7001,
    "Url": "http://localhost:7001"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:4200",
      "http://localhost:4200",
      "https://localhost:3000"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "MicrosoftInformation"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cadplus-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
